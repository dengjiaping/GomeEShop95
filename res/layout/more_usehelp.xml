<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/more_use_help_section_title_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="12dip"
                android:text="@string/delivery_progress" />

            <com.gome.ecmall.custom.DisScrollListView
                android:id="@+id/more_section_lv_first"
                style="@style/more_section_listview_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dip" />

            <TextView
                style="@style/more_use_help_section_title_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="12dip"
                android:text="@string/security_payment" />

            <com.gome.ecmall.custom.DisScrollListView
                android:id="@+id/more_section_lv_second"
                style="@style/more_section_listview_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dip" />

            <TextView
                style="@style/more_use_help_section_title_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="12dip"
                android:text="@string/sale_server" />

            <com.gome.ecmall.custom.DisScrollListView
                android:id="@+id/more_section_lv_third"
                style="@style/more_section_listview_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>