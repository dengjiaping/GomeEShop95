<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dip"
    android:layout_height="wrap_content"
    android:paddingTop="8dip" >

    <RelativeLayout
        android:id="@+id/category_productlist_grid_item_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:background="@drawable/category_product_list_grid_item_frame_shape_selector" >

        <ImageView
            android:id="@+id/category_productlist_grid_item_icon"
            android:layout_width="fill_parent"
            android:layout_height="160dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/product_list_grid_item_icon_bg"
            android:padding="1dip" />

        <ImageView
            android:id="@+id/category_productlist_grid_item_promotion_type"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@id/category_productlist_grid_item_icon"
            android:layout_alignTop="@id/category_productlist_grid_item_icon" />

        <TextView
            android:id="@+id/category_productlist_grid_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_productlist_grid_item_icon"
            android:gravity="left"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:paddingTop="4dip"
            android:singleLine="true"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/category_productlist_grid_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/category_productlist_grid_item_title"
            android:layout_marginRight="10dip"
            android:padding="4dip"
            android:singleLine="true"
            android:textColor="@color/price_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_productlist_grid_item_no_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/category_productlist_grid_item_title"
            android:layout_marginRight="10dip"
            android:padding="4dip"
            android:singleLine="true"
            android:text="@string/now_not_have_price"
            android:textColor="@color/price_text_color"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>