<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/limit_buy_item_top_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/limit_buy_list_item_top_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/limit_time_now_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/limit_time_now_bg" />

            <TextView
                android:id="@+id/limitbuy_surtime_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="@string/limitbuy_disend"
                android:textColor="@color/main_default_black_text_color" />

            <LinearLayout
                android:id="@+id/limitbuy_detail_time_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/limitbuy_surtime_hour_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />

                <TextView
                    android:id="@+id/limitbuy_surtime_hour_data_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="@color/contents_text" />

                <TextView
                    android:id="@+id/limitbuy_surtime_min_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />

                <TextView
                    android:id="@+id/limitbuy_surtime_min_data_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="："
                    android:textColor="@color/contents_text" />

                <TextView
                    android:id="@+id/limitbuy_surtime_second_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />

                <TextView
                    android:id="@+id/limitbuy_surtime_second_data_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dip"
                    android:background="@color/contents_text"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="0"
                    android:textColor="@color/bangclepay_keyboard_white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_ll"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/remain_num_below_im"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/black_line" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/product_list_grid_item_icon_bg"
                android:padding="1dip" />

            <ImageView
                android:id="@+id/remain_num_below_im"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/black_line" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/limit_buy_item_top_rl"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/limit_buy_list_item__buttom_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/originalpricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="6dip"
            android:maxLines="2"
            android:paddingBottom="3dip"
            android:textColor="@color/main_default_black_text_color" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-2dip"
            android:layout_marginRight="-6dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/common_dot_line_style_one" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                 >

                <TextView
                    android:id="@+id/limitnumtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:layout_marginTop="2dip"
                    android:text="仅剩:"
                    android:textColor="@color/weak_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/limitnumtextdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/limitnumtext"
                    android:layout_toRightOf="@+id/limitnumtext"
                    android:text="33件"
                    android:textColor="@color/weak_text_color"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/limitbuy_state_probar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="60dip"
                    android:layout_height="8dip"
                    android:layout_below="@+id/limitnumtext"
                    android:background="@drawable/limit_remain_num_pro_bg"
                    android:padding="1.5dip"
                    android:progress="0"
                    android:progressDrawable="@drawable/myprogressbarstyle" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dip"
                android:background="@drawable/limit_itme_vertical_line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" 
					android:id="@+id/limit_price_ll"
                    >

                    <TextView
                        android:id="@+id/limit_buy_limit_price_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/price_text_color" />

                    <TextView
                        android:id="@+id/limit_buy_limit_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="280"
                        android:textColor="@color/price_text_color"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/limit_buy_limit_price_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text=".00"
                        android:textColor="@color/price_text_color" />

                    <TextView
                        android:id="@+id/limit_buy_gome_discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dip"
                        android:text="7.6"
                        android:textColor="@color/product_sku_check_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/limit_buy_gome_discount_tv_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/limit_buy_gome_discount_tv"
                        android:text="折"
                        android:textColor="@color/product_sku_check_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/limit_buy_gome_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/limit_price_ll"
                    android:text="￥32.00"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/limit_buy_item_tag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="6.5dip"
        android:background="@drawable/limit_buy_item_one_icon" />

</RelativeLayout>