<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/mygome_myorder_order_details_goodslist_goods_icon_imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/product_list_item_icon_bg"
        android:padding="1dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <com.gome.ecmall.custom.LineTextView
            android:id="@+id/mygome_myorder_order_details_goodslist_goods_name_textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="rrrrrrrrrrrrrrrrrrrrr"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="15dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:text="@string/number"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/mygome_myorder_order_details_goodslist_goods_number_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dip"
                android:textColor="@color/price_text_color"
                android:textSize="15dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:text="@string/price"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/mygome_myorder_order_details_goodslist_goods_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:padding="2dip"
                android:textColor="@color/price_text_color"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mygome_myorder_goods_list_attr_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mygome_myorder_goods_list_prom_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mygome_myorder_goods_list_gift_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>