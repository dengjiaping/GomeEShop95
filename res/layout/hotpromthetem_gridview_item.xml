<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/hotprom_thetem_grid_item_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/hotprom_thetem_grid_item_icon"
            android:layout_width="fill_parent"
            android:layout_height="140dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/product_list_grid_item_icon_bg" />

        <TextView
            android:id="@+id/hotprom_thetem_grid_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/hotprom_thetem_grid_item_icon"
            android:layout_below="@id/hotprom_thetem_grid_item_icon"
            android:layout_margin="4dip"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="10sp"
             />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotprom_thetem_grid_item_name"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hotprom_thetem_grid_item_org_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="4dip"
                android:singleLine="true"
                android:text="￥0.00"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotprom_thetem_grid_item_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="4dip"
                android:singleLine="true"
                android:text="￥0.00"
                android:textColor="@color/price_text_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hotprom_thetem_grid_item_promotion_type"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@id/hotprom_thetem_grid_item_icon"
            android:layout_alignTop="@id/hotprom_thetem_grid_item_icon" />
    </RelativeLayout>

</RelativeLayout>