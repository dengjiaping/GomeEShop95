<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="12dip"
        android:background="@drawable/more_item_single_normal"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.gome.ecmall.custom.AutoScrollTextView
                android:id="@+id/more_announce_detail_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/more_announce_detail_time"
                style="@style/more_common_middle_hint_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />

            <TextView
                android:id="@+id/more_announce_detail_content"
                style="@style/more_common_content_desc_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>