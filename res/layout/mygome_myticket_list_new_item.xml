<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/more_item_single_normal" 
    >
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:paddingTop="13dip"
        android:layout_alignParentLeft="true"
        android:src="@drawable/product_blue_coupon" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="编       号："
                android:textColor="@color/weak_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="金       额："
                android:textColor="@color/weak_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/price_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_expiration_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="使用期限："
                android:textColor="@color/weak_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_default_black_text_color"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        <!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="使用说明："
                android:textColor="@color/weak_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mygome_mycoupon_ticket_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>