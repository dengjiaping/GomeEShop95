<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal">
 
    <TextView
        android:id="@+id/shopping_cart_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/price_text_color" /> 

    <com.gome.ecmall.custom.ShopLineTextView
        android:id="@+id/shopping_cart_type_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shopping_cart_type"
        android:maxLines="4"
        android:textColor="@color/main_default_black_text_color" />

</RelativeLayout>