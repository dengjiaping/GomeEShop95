<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/group_limit_hot_item_bg" >

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hot_promotion_item_img_height"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:src="@drawable/product_list_grid_item_icon_bg" />

        <ImageView
            android:id="@+id/hot_prom_tag_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/product_blue_coupon" />

        <LinearLayout
            android:id="@+id/lint_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_below="@+id/product_image"
            android:background="#d8d8d8"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lint_layout"
            android:background="#f3f3f3" >

            <TextView
                android:id="@+id/product_describe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/hot_prom_black_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_describe"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="2dip"
                android:singleLine="true"
                android:textColor="@color/hot_prom_orange"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/common_dot_line_style_one" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_line"
                android:gravity="center_vertical"
                android:baselineAligned="false"
                android:minHeight="45dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/price_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/price"
                        android:layout_marginLeft="8dp"
                        android:text="@string/order_amount"
                        android:textColor="@color/price_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/price_mark"
                        android:singleLine="true"
                        android:textColor="@color/price_text_color"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/price"
                        android:layout_toRightOf="@+id/price"
                        android:singleLine="true"
                        android:textColor="@color/price_text_color"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_save"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/hot_prom_cost_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hot_prom_cost_price"
                        android:textColor="@color/hint_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hot_prom_cost_price_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/hot_prom_cost_price"
                        android:layout_marginLeft="3dip"
                        android:layout_toRightOf="@+id/hot_prom_cost_price"
                        android:textColor="@color/hint_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hot_prom_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hot_prom_cost_price"
                        android:singleLine="true"
                        android:text="@string/hot_prom_save"
                        android:textColor="@color/weak_text_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hot_prom_save_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/hot_prom_save"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/hot_prom_save"
                        android:singleLine="true"
                        android:textColor="@color/weak_text_color"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>