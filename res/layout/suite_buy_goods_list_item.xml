<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <ImageView
        android:id="@+id/suite_buy_attachment_goods_list_imageView1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/product_list_grid_item_icon_bg"
        android:padding="1dp" />

    <ImageView
        android:id="@+id/suite_buy_attachment_goods_list_imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/suite_buy_goods_selector" />

    <Button
        android:id="@+id/suite_buy_attachment_goods_add_del_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/suite_buy_goods_button_selector" />

    <TextView
        android:id="@+id/suite_buy_attachment_goods_textView1"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/suite_buy_attachment_goods_list_imageView2"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/suite_buy_attachment_goods_price_textView1"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/suite_buy_attachment_goods_list_imageView2"
        android:layout_marginLeft="18dp"
        android:gravity="center_horizontal|bottom"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="13dip" />

</RelativeLayout>