<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="30dip"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/home_limit_commend"
    android:background="@android:color/white"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/home_limit_goodsImage"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="6dip"
        android:padding="2.5dip" />

    <ImageView
        android:id="@+id/category_productlist_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/common_right_arrow_bg_selector" />
    
    <LinearLayout 
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_limit_goodsImage"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:orientation="vertical"
        >
        <LinearLayout 
        android:id="@+id/info1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
            <TextView
        android:id="@+id/time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离本场结束只剩："
        android:textSize="12sp"
        android:textColor="#333333" />
    
    <TextView
        android:id="@+id/home_limit_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/price_text_color"
        android:textStyle="bold"
        android:layout_marginLeft="2dip"
        android:text="08" />
    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="2dip"
        android:textColor="#333333"
        android:text="时" />
    <TextView
        android:id="@+id/home_limit_minite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="2dip"
        android:textColor="@color/price_text_color"
        android:textStyle="bold"
        android:text="08" />
    <TextView
        android:id="@+id/minite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="2dip"
        android:textColor="#333333"
        android:text="分" />
    <TextView
        android:id="@+id/home_limit_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="2dip"
        android:textColor="@color/price_text_color"
        android:textStyle="bold"
        android:text="08" />
    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="2dip"
        android:textColor="#333333"
        android:text="秒" />
        </LinearLayout>
    
     <LinearLayout 
         android:id="@+id/info2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dip"
        >
          <TextView
        android:id="@+id/home_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="限时抢购：" />
    
    <TextView
        android:id="@+id/home_limit_goodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#999999"
        android:text="苹果最新产品iphone20苹果最新产品iphone20苹果最新产品iphone20苹果最新产品iphone20" />
     </LinearLayout>
 
      <LinearLayout 
          android:id="@+id/info3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dip"
        >
          <TextView
        android:id="@+id/home_limit_priceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抢购价："
        android:textSize="12sp"
        android:textColor="#999999"/>
    
    <TextView
        android:id="@+id/home_limit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="￥1500.00"
        android:textColor="@color/price_text_color" />
    
     <TextView
        android:id="@+id/home_limit_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:text="原价："
        android:textSize="12sp"
        android:textColor="#999999"/>
          
      </LinearLayout>
    </LinearLayout>
</RelativeLayout>