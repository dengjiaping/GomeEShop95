<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dip"
    android:paddingTop="15dip" >

    <RadioButton
        android:id="@+id/shopping_store_radiobutton"
        style="@style/radiogroup_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:clickable="false"
        android:drawableLeft="@drawable/radio_button_bg_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="5dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shopping_store_radiobutton"
        android:layout_centerVertical="true"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shopping_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="国美中关村科贸商城"
            android:textColor="@color/main_default_black_text_color" />

        <TextView
            android:id="@+id/shopping_store_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="010-82535123"
            android:textColor="@color/weak_text_color" />

        <TextView
            android:id="@+id/shopping_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="海淀区中关村南大街32号"
            android:textColor="@color/weak_text_color" />
    </LinearLayout>

</RelativeLayout>