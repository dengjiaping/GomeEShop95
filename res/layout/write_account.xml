<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/write_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

<RelativeLayout
            android:id="@+id/modify_payment_password_one_title_im"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hot_promtions_item_title_bg"
            android:padding="10dip" >

            <RelativeLayout
                android:id="@+id/step_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/step_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_yuan_green"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/main_default_white_text_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/step_two"
                    android:layout_toRightOf="@+id/step_one"
                    android:background="@drawable/line_cu" />
				<TextView
                    android:id="@+id/step_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_yuan_ritht_hui"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/hint_text_color" />
				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/step_three"
                    android:layout_toRightOf="@+id/step_two"
                    android:background="@drawable/line_cu" />
                <TextView
                    android:id="@+id/step_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_yuan_ritht_hui"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/hint_text_color" />
            </RelativeLayout>

            <TextView
                android:id="@+id/step_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="8dip"
                android:gravity="center"
                android:text="@string/retrieve_user_name"
                android:textColor="@color/contents_text" />
            <TextView
                android:id="@+id/step_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/validation_mobile"
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/step_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="8dip"
                android:gravity="center"
                android:text="@string/setting_new_pay_password"
                android:textColor="@color/hint_text_color" />
        </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/common_bg"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/write_account_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dip" >

                <RadioButton
                    android:id="@+id/gome_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_bg_selector"
                    android:checked="true"
                    android:text="国美账号"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/coo8_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:button="@drawable/radio_button_bg_selector"
                    android:text="库巴账号"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/more_item_single_normal"
                android:minHeight="45dip" >

                <TextView
                    android:id="@+id/find_password_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:text="@string/login_user_name"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/find_password_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@+id/clear_text"
                    android:layout_toRightOf="@+id/find_password_account_title"
                    android:background="@null"
                    android:hint="@string/login_input_user_name"
                    android:minHeight="40dip"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColorHint="@color/main_default_grey_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/clear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/limitbuy_esoterica_close"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/more_item_single_normal"
                android:minHeight="45dip" >

                <TextView
                    android:id="@+id/find_password_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:text="@string/login_code"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/write_account_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@+id/image_account_code"
                    android:layout_toRightOf="@+id/find_password_code"
                    android:background="@null"
                    android:hint="@string/login_code_hit"
                    android:minHeight="40dip"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColorHint="@color/main_default_grey_text_color"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_account_code"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/code" />
            </RelativeLayout>

            <Button
                android:id="@+id/write_account_next_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="35dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/common_orange_btn"
                android:minHeight="40dip"
                android:text="@string/groupbuy_next"
                android:textColor="@color/main_default_white_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:layout_marginTop="60dip"
                android:text="【提示】仅限手机号已验证和手机号注册用户找回密码"
                android:textColor="@color/hint_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>