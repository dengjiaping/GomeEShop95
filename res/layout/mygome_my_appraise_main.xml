<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        android:id="@+id/scrollView1"
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/grade"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15dip" />

            <RatingBar
                android:id="@+id/goods_appraise_ratingBar1"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/title"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15dip" />

            <EditText
                android:id="@+id/goods_appraise_title_editText1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_single_normal"
                android:ems="10"
                android:hint="@string/title_4_20"
                android:imeOptions="actionNext"
                android:minHeight="45dp"
                android:singleLine="true"
                android:textSize="15dip" >
            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/use_experience"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15dip" />

            <EditText
                android:id="@+id/goods_appraise_summary_editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_single_normal"
                android:ems="10"
                android:hint="@string/use_advantage_hint"
                android:minHeight="80dp"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/recommend"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15dip" />

            <LinearLayout
                android:id="@+id/goods_appraise_advantage_linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_single_normal"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="价格低"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="轻薄"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="性价比高"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:text="使用方便"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:text="随身携带方便"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:text="牛 !"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="适合上班使用"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="5dp"
                    android:text="不占地"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:text="上手佳品"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/mygome_my_appraise_advantage_TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="#CC0000"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="实在是太便宜了!"
                    android:textColor="#ffffff"
                    android:textSize="15dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>