<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/arrow_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="9dip"
        android:layout_marginRight="3dip"
        android:src="@drawable/map_hear_new" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:singleLine="true"
            android:text="中关村国美电器鼎好点"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/store_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:text="010-88888888"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:lineSpacingExtra="4dip"
            android:text="北京市海淀区中关村大街3号"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="5dip"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/common_right_arrow_bg_selector" />

</LinearLayout>