<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/more_announce_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:background="@drawable/common_right_arrow_bg_selector" />

    <TextView
        android:id="@+id/more_announce_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/more_announce_list_item_arrow"
        android:ellipsize="end"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="8dip"
        android:paddingBottom="1dip"
        android:singleLine="true"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/more_announce_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/more_announce_list_item_title"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="1dip"
        android:paddingBottom="8dip"
        android:textColor="@color/weak_text_color"
        android:textSize="16sp" />

</RelativeLayout>