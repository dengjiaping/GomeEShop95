<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/energy_info_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:background="@drawable/more_item_single_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shopping_cart_energy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/shopping_cart_energy_info"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/energy_info_data"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/weak_text_color"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/energy_info_relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/shopping_cart_energy_buytype"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/shopping_cart_energy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/shopping_cart_energy_name"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/shopping_cart_energy_idcardnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/shopping_cart_energy_idcardnumber"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/shopping_cart_energy_bank"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/shopping_cart_energy_bank_number"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shopping_cart_energy_buytype_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/shopping_cart_energy_name_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/weak_text_color" />

                <TextView
                    android:id="@+id/shopping_cart_energy_idcardnumber_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/shopping_cart_energy_bank_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/shopping_cart_energy_bank_number_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/weak_text_color"
                    android:textSize="15dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_energy_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="2dp"
        android:background="@drawable/common_right_arrow_bg_selector" />

</LinearLayout>