<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dip"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:layout_marginTop="80dip"
    android:background="@color/weak_text_color"
    android:orientation="vertical"
    android:padding="1dip" >

    <TextView
        android:id="@+id/dialottitle"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="#3C3C3C"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ExpandableListView
        android:id="@+id/product_inventory_division_list"
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:childDivider="@color/hint_text_color"
        android:childIndicator="@android:color/transparent"
        android:divider="@color/main_default_black_text_color"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:groupIndicator="@android:color/transparent"
        android:listSelector="@android:color/transparent" />

</LinearLayout>