<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:text="@string/shopping_goods_invoice_type_null"
                android:textColor="@color/main_default_black_text_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/more_item_single_bg_selector"
                android:paddingLeft="5dip" >

                <RadioButton
                    android:id="@+id/shopping_general_invoice_radiobutton"
                    style="@style/radiogroup_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio_button_bg_selector" />

                <TextView
                    android:id="@+id/shopping_goods_order_general_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/shopping_general_invoice_radiobutton"
                    android:text="@string/shopping_goods_order_general_invoice"
                    android:textColor="@color/main_default_black_text_color" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:text="@string/shopping_goods_invoice_title_null"
                android:textColor="@color/main_default_black_text_color" />

            <RelativeLayout
                android:id="@+id/shopping_invoice_person_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/more_item_first_bg_selector"
               
                android:paddingLeft="5dip"
                 >

                <RadioButton
                    android:id="@+id/shopping_invoice_person_title_radiobutton"
                    style="@style/radiogroup_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:drawableLeft="@drawable/radio_button_bg_selector" />

                <TextView
                    android:id="@+id/shopping_goods_order_general_invoice_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/shopping_invoice_person_title_radiobutton"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/shopping_invoice_person_title_radiobutton"
                    android:text="@string/shopping_goods_order_general_invoice_person"
                    android:textColor="@color/main_default_black_text_color" />

                <EditText
                    android:id="@+id/shopping_invoice_person_title_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/shopping_goods_order_general_invoice_person"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/more_item_single_normal"
                    android:hint="@string/shopping_goods_order_general_invoice_titlehint"
                    android:maxLength="25"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shopping_invoice_unit_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_item_last_bg_selector"
                
                android:paddingLeft="5dip"
                >

                <RadioButton
                    android:id="@+id/shopping_invoice_unit_title_radiobutton"
                    style="@style/radiogroup_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/radio_button_bg_selector" />

                <TextView
                    android:id="@+id/shopping_goods_order_general_invoice_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/shopping_invoice_unit_title_radiobutton"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="5dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/shopping_invoice_unit_title_radiobutton"
                    android:text="@string/shopping_goods_order_general_invoice_unit"
                    android:textColor="@color/main_default_black_text_color" />

                <EditText
                    android:id="@+id/shopping_invoice_unit_title_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/shopping_goods_order_general_invoice_person"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/more_item_single_normal"
                    android:hint="@string/shopping_goods_order_general_invoice_titlehint"
                    android:maxLength="25"
                    android:layout_centerVertical="true"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:text="@string/shopping_goods_invoice_content_null"
                android:textColor="@color/main_default_black_text_color" />

            <com.gome.ecmall.custom.DisScrollListView
                android:id="@+id/shopping_cart_section_lv_first"
                style="@style/more_section_listview_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:dividerHeight="0dip"
                android:footerDividersEnabled="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>