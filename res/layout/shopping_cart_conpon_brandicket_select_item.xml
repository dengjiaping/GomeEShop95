<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dip"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shopping_blueticket_radiobutton_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:background="@drawable/checkbox_bg_unchecked" />
    <RelativeLayout
        android:id="@+id/shopping_coupon_ticket_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
         >

        <TextView
            android:id="@+id/shopping_coupon_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shopping_goods_order_conpon_ticket_id"
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/shopping_coupon_ticket_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shopping_coupon_ticket"
            android:layout_toRightOf="@id/shopping_coupon_ticket"
            android:singleLine="true"
            android:textColor="@color/main_default_black_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shopping_coupon_ticket"
            android:layout_below="@id/shopping_coupon_ticket"
            android:text="@string/shopping_goods_order_conpon_ticket_amount"
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_amount_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shopping_goods_order_conpon_ticket_amount"
            android:layout_toRightOf="@id/shopping_goods_order_conpon_ticket_amount"
            android:textColor="@color/price_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shopping_goods_order_conpon_ticket_amount"
            android:layout_below="@id/shopping_goods_order_conpon_ticket_amount"
            android:text="@string/shopping_goods_order_conpon_ticket_date"
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_date_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shopping_goods_order_conpon_ticket_date"
            android:layout_toRightOf="@id/shopping_goods_order_conpon_ticket_date"
            android:textColor="@color/main_default_black_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shopping_goods_order_conpon_ticket_date"
            android:layout_below="@id/shopping_goods_order_conpon_ticket_date"
            android:text="@string/shopping_goods_order_conpon_ticket_desc"
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/shopping_goods_order_conpon_ticket_desc_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shopping_goods_order_conpon_ticket_desc"
            android:layout_toRightOf="@id/shopping_goods_order_conpon_ticket_desc"
            android:textColor="@color/main_default_black_text_color" />
    </RelativeLayout>
</LinearLayout>