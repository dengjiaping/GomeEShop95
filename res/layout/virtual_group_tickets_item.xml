<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/firstlinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_item_first_normal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dip"
                android:singleLine="true"
                android:text="劵号："
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_virtual_group_tickets_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/groupbuy_order_item_btn"
                android:layout_toRightOf="@+id/textView2"
                android:singleLine="true"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="0dip"
                android:singleLine="true"
                android:text="状态："
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_virtual_group_tickets_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@+id/textView1"
                android:singleLine="true"
                android:textColor="@color/price_text_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_virtual_group_tickets_sms"
                    android:layout_width="70dp"
                    android:layout_height="35dip"
                    android:background="@drawable/group_tickets_item_bt_bg_selector"
                    android:text="发短信"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="@dimen/default_text_size"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_virtual_group_tickets_refund"
                    android:layout_width="50dp"
                    android:layout_height="35dip"
                    android:background="@drawable/group_tickets_item_bt_bg_selector"
                    android:text="退款"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="@dimen/default_text_size"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/bt_virtual_group_tickets_buy"
                    android:layout_width="90dp"
                    android:layout_height="35dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/group_tickets_item_bt_bg_selector"
                    android:text="再次购买"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="@dimen/default_text_size"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lastlinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_item_last_bg_selector"
        android:minHeight="80dip" >

        <LinearLayout
            android:id="@+id/img_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="3dip"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/mygome_myorder_list_item_right_imageView1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/group_buy_item_img"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:src="@drawable/phone_recharge_item_bg" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip" >

                <TextView
                    android:id="@+id/group_buy_order_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_layout"
            android:layout_marginTop="8dip"
            android:paddingBottom="8dip" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="购买日期："
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_virtual_group_tickets_buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView5"
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView5"
                android:layout_marginTop="3dip"
                android:text="到期日期："
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_virtual_group_tickets_expire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_below="@id/textView5"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView7"
                android:textColor="@color/hint_text_color"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>