<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/product_list_item_bg_selector" >

    <ImageView
        android:id="@+id/category_productlist_list_item_icon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/product_list_item_icon_bg" />

    <ImageView
        android:id="@+id/category_productlist_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:src="@drawable/common_right_arrow_bg_selector" />

    <com.gome.ecmall.custom.LineTextView
        android:id="@+id/category_productlist_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_toRightOf="@id/category_productlist_list_item_icon"
        android:ellipsize="end"
        android:lines="3"
        android:paddingBottom="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/category_productlist_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/category_productlist_list_item_title"
        android:layout_below="@id/category_productlist_list_item_title"
        android:layout_marginTop="8dip"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/price_text_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_productlist_list_item_no_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/category_productlist_list_item_title"
        android:layout_below="@id/category_productlist_list_item_title"
        android:layout_marginTop="8dip"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/price_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/category_productlist_list_item_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dip"
        android:background="@drawable/common_delete_bg_selector"
        android:padding="10dip"
        android:text="@string/delete"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>