<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="@string/delivery_form"
        android:textColor="#333333"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/mygome_myorder_order_details_delivery_id_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView1"
        android:textColor="#333333"
        android:textSize="15dip" />

    <Button
        android:id="@+id/mygome_myorder_order_details_look_delivery_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_orange_btn"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/look_delivery"
        android:textColor="#ffffff"
        android:textSize="15dip" />

</RelativeLayout>