<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_cart_lace" />

    <ScrollView
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_item_single_bg_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/order_success_duigou" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dip" >

                    <TextView
                        android:id="@+id/shopping_goods_order_success_thanks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="@string/shopping_goods_order_success_thanks_cashondelivery"
                        android:textColor="@color/common_orange_textcolor" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_ordernum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/shopping_goods_order_success_thanks"
                        android:layout_below="@id/shopping_goods_order_success_thanks"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:text="@string/shopping_goods_order_success_ordernum"
                        android:textColor="@color/main_default_black_text_color" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_ordernum_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shopping_goods_order_success_ordernum"
                        android:layout_toRightOf="@id/shopping_goods_order_success_ordernum"
                        android:textColor="@color/price_text_color" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_orderprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/shopping_goods_order_success_ordernum"
                        android:layout_below="@id/shopping_goods_order_success_ordernum_data"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:text="@string/shopping_goods_order_success_orderprice"
                        android:textColor="@color/main_default_black_text_color" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_orderprice_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shopping_goods_order_success_orderprice"
                        android:layout_toRightOf="@id/shopping_goods_order_success_orderprice"
                        android:textColor="@color/price_text_color" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_paymethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/shopping_goods_order_success_orderprice"
                        android:layout_below="@id/shopping_goods_order_success_orderprice_data"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:text="@string/shopping_goods_order_success_paymethod"
                        android:textColor="@color/main_default_black_text_color" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_paymethod_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shopping_goods_order_success_paymethod"
                        android:layout_toRightOf="@id/shopping_goods_order_success_paymethod"
                        android:textColor="@color/price_text_color" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sumbit_success_button_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/shopping_cart_look_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_white_btn_bg_selector"
                        android:text="@string/shopping_goods_order_success_dsch" />

                    <Button
                        android:id="@+id/shopping_cart_go_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/common_white_btn_bg_selector"
                        android:text="@string/mygome_my_order" />

                    <Button
                        android:id="@+id/shopping_cart_go_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/common_white_btn_bg_selector"
                        android:text="@string/take_from_gome_store_for_help"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/shopping_cart_store_mes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="20dip"
                    android:lineSpacingExtra="3dip"
                    android:textColor="@color/main_default_black_text_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_keep_24_hours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:text="@string/shopping_cart_order_prompt_keep_24_hours"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sumbit_payment_online_linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="20dip"
                    android:text="@string/shopping_goods_order_success_sele_payment"
                    android:textColor="@color/main_default_black_text_color" />

                <RelativeLayout
                    android:id="@+id/shopping_yinlian_relative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/more_item_first_bg_selector"
                    android:minHeight="45dip" >

                    <RadioButton
                        android:id="@+id/shopping_yilian_radiobutton"
                        style="@style/radiogroup_item_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="-15dip"
                        android:checked="true"
                        android:drawableLeft="@drawable/radio_button_bg_selector" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_payment_yinlian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shopping_yilian_radiobutton"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:layout_toRightOf="@id/shopping_yilian_radiobutton"
                        android:text="@string/shopping_goods_order_success_payment_yinlian"
                        android:textColor="@color/main_default_black_text_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shopping_zhifubao_relative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_last_bg_selector"
                    android:minHeight="45dip" >

                    <RadioButton
                        android:id="@+id/shopping_zhifubao_radiobutton"
                        style="@style/radiogroup_item_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="-15dip"
                        android:checked="false"
                        android:drawableLeft="@drawable/radio_button_bg_selector" />

                    <TextView
                        android:id="@+id/shopping_goods_order_success_payment_zhifubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shopping_zhifubao_radiobutton"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:layout_toRightOf="@id/shopping_zhifubao_radiobutton"
                        android:text="@string/shopping_goods_order_success_payment_zhifubao"
                        android:textColor="@color/main_default_black_text_color" />
                </RelativeLayout>

                <Button
                    android:id="@+id/shopping_goods_order_success_gopayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/common_orange_btn"
                    android:paddingBottom="10dip"
                    android:paddingLeft="40dip"
                    android:paddingRight="40dip"
                    android:paddingTop="10dip"
                    android:text="@string/shopping_goods_order_success_gopayment"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>