<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checked_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
            android:id="@+id/modify_payment_password_one_title_im"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hot_promtions_item_title_bg"
            android:padding="10dip" >

            <RelativeLayout
                android:id="@+id/step_one_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/step_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_yuan_green"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/main_default_white_text_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/step_two"
                    android:layout_toRightOf="@+id/step_one"
                    android:background="@drawable/line_cu" />
				<TextView
                    android:id="@+id/step_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_yuan_green"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/main_default_white_text_color" />
				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/step_three"
                    android:layout_toRightOf="@+id/step_two"
                    android:background="@drawable/line_cu" />
                <TextView
                    android:id="@+id/step_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_yuan_ritht_hui"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/hint_text_color" />
            </RelativeLayout>

            <TextView
                android:id="@+id/step_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="8dip"
                android:gravity="center"
                android:text="@string/retrieve_user_name"
                android:textColor="@color/contents_text" />
            <TextView
                android:id="@+id/step_two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/validation_mobile"
                android:textColor="@color/contents_text" />

            <TextView
                android:id="@+id/step_three_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/step_one_rl"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="8dip"
                android:gravity="center"
                android:text="@string/setting_new_pay_password"
                android:textColor="@color/hint_text_color" />
        </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:background="@drawable/more_item_first_normal"
                android:minHeight="45dip" >

                <TextView
                    android:id="@+id/checked_phone_account_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/login_user_name"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/checked_phone_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checked_phone_account_title"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_item_last_normal"
                android:minHeight="45dip" >

                <TextView
                    android:id="@+id/checked_phone_checked_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/checked_phone_num"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/checked_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checked_phone_checked_title"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="@color/main_default_black_text_color"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:minHeight="40dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/check_code_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_item_single_normal"
                    android:minHeight="45dip"
                    >

                    <TextView
                        android:id="@+id/checked_phone_code_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/check_code"
                        android:textColor="@color/main_default_black_text_color"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/check_phone_check_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/checked_phone_code_title"
                        android:background="@null"
                        android:hint="@string/input_check_code_find"
                        android:minHeight="40dip"
                        android:singleLine="true"
                        android:textColorHint="@color/main_default_grey_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/get_check_phone_code_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_orange_btn"
                    android:layout_marginTop="2dip"
                    android:layout_marginRight="6dip"
                    android:enabled="true"
                    android:minHeight="40dip"
                    android:text="@string/get_phone_check_code"
                    android:textColor="@color/main_default_white_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/check_phone_describe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:text="短信已发送到您的手机，如在 120 秒之内还没有收到短信验证码，请重新获取验证码"
                android:textColor="@color/hint_text_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/next_step_check_phone_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="35dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/common_orange_btn"
                android:minHeight="40dip"
                android:text="@string/groupbuy_next"
                android:textColor="@color/main_default_white_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>