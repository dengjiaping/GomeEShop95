<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/product_list_item_bg_selector" >

    <ImageView
        android:id="@+id/category_productlist_list_item_icon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/product_list_item_icon_bg"
        android:padding="2.5dip" />

    <ImageView
        android:id="@+id/category_productlist_list_item_promotion_type"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignLeft="@id/category_productlist_list_item_icon"
        android:layout_alignTop="@id/category_productlist_list_item_icon" />

    <ImageView
        android:id="@+id/category_productlist_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/common_right_arrow_bg_selector" />

    <com.gome.ecmall.custom.PreLineTextView
        android:id="@+id/category_productlist_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_toRightOf="@id/category_productlist_list_item_icon"
        android:background="@android:color/transparent"
        android:maxLines="2"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/category_productlist_list_item_ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_toRightOf="@id/category_productlist_list_item_icon"
        android:layout_below="@id/category_productlist_list_item_title"
        android:background="@android:color/transparent"
        android:lines="1"
        android:ellipsize="end"
        android:paddingBottom="4dip"
        android:paddingRight="4dip"
        android:textColor="@color/common_orange_textcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/category_productlist_list_item_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_productlist_list_item_ad"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_toRightOf="@+id/category_productlist_list_item_icon"
        android:singleLine="true"
        android:textColor="@color/price_text_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_productlist_list_item_no_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_productlist_list_item_ad"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/category_productlist_list_item_arrow"
        android:layout_toRightOf="@+id/category_productlist_list_item_icon"
        android:singleLine="true"
        android:text="@string/now_not_have_price"
        android:textColor="@color/price_text_color"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>