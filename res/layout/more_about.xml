<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical"
    tools:context="com.gome.ecmall.home.mygome.AdvisoryReplyActivity" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip"
        android:background="@drawable/more_item_single_normal" >

        <ImageView
            android:id="@+id/more_about_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/more_about_logo" />

        <TextView
            android:id="@+id/more_about_tv_version"
            style="@style/more_about_desc_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_about_iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="0dip"
            android:textColor="@color/weak_text_color" />

        <TextView
            android:id="@+id/more_about_tv_copyright"
            style="@style/more_about_desc_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_about_tv_version"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dip"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/copyright_desc"
            android:textColor="@color/main_default_black_text_color" />

        <TextView
            android:id="@+id/more_about_tv_author"
            style="@style/more_about_desc_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/more_about_tv_copyright"
            android:layout_centerHorizontal="true"
            android:text="@string/author_desc"
            android:textColor="@color/main_default_black_text_color" />
    </RelativeLayout>

</LinearLayout>