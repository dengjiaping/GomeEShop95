<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_product_display_switch_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <Button
        android:id="@+id/category_product_display_type_list"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/product_displaytype_list_icon_bg_selector" />

    <Button
        android:id="@+id/category_product_display_type_grid"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/product_displaytype_grid_icon_bg_selector" />

</LinearLayout>