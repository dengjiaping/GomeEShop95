<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/category_product_question_list_item_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category_product_question_list_item_top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/category_product_question_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|top"
            android:maxLines="1"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/category_product_question_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingRight="8dip"
            android:singleLine="true"
            android:textColor="@color/price_text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/category_product_question_list_item_content_bg"
        android:paddingBottom="8dip" >

        <ImageView
            android:id="@+id/category_product_question_list_item_question_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/category_product_question_icon" />

        <TextView
            android:id="@+id/category_product_question_list_item_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_marginTop="6dip"
            android:layout_toRightOf="@id/category_product_question_list_item_question_icon"
            android:ellipsize="none"
            android:gravity="left|top"
            android:paddingRight="8dip"
            android:textColor="@color/main_default_black_text_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/category_product_question_list_item_answer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/category_product_question_list_item_question"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/category_product_answer_icon" />

        <TextView
            android:id="@+id/category_product_qustion_list_item_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_product_question_list_item_question"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="6dip"
            android:layout_toRightOf="@id/category_product_question_list_item_answer_icon"
            android:ellipsize="none"
            android:gravity="left|center_vertical"
            android:paddingRight="8dip"
            android:singleLine="false"
            android:textColor="@color/link_text_color"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>