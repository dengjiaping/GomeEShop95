<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/bangclepay_keyboard_num_sign_padding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bangclepay_keyboard_button1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bangclepay_keyboard_button5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_num_button_delete"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_delete"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bangclepay_keyboard_button8"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_button0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_key"
            android:textColor="@color/bangclepay_style_keyboard_text_color"
            android:textSize="@dimen/bangclepay_keyboard_fontsize" />

        <Button
            android:id="@+id/bangclepay_keyboard_num_button_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/bangclepay_keyboard_key_margin"
            android:layout_marginRight="@dimen/bangclepay_keyboard_key_margin"
            android:layout_weight="1.0"
            android:background="@drawable/bangclepay_style_keyboard_num_ok"
            android:paddingBottom="3dip"
            android:text="@string/bangclepay_keyboard_ok"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>