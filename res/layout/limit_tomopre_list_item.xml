<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/product_list_item_bg_selector" >

    <ImageView
        android:id="@+id/limit_productlist_list_item_icon"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:background="@drawable/product_list_item_icon_bg"
        android:padding="3dip" />

    <ImageView
        android:id="@+id/limit_productlist_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/common_right_arrow_bg_selector"
        android:padding="1dip" />

    <com.gome.ecmall.custom.PreLineTextView
        android:id="@+id/limit_productlist_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_toLeftOf="@id/limit_productlist_list_item_arrow"
        android:layout_toRightOf="@id/limit_productlist_list_item_icon"
        android:lines="2"
        android:paddingBottom="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/limitbuy_limitbuyprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/limit_productlist_list_item_title"
        android:layout_below="@id/limit_productlist_list_item_title"
        android:layout_marginTop="5dip"
        android:text="@string/limitbuy_limitbuyprice"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/limit_productlist_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/limitbuy_limitbuyprice"
        android:layout_alignTop="@id/limitbuy_limitbuyprice"
        android:layout_below="@id/limit_productlist_list_item_title"
        android:layout_toRightOf="@id/limitbuy_limitbuyprice"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="￥0.00"
        android:textColor="@color/price_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/limitbuy_orginprice_kh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/limitbuy_limitbuyprice"
        android:layout_below="@id/limitbuy_limitbuyprice"
        android:layout_marginTop="2dip"
        android:text="@string/limitbuy_orgprice_kh"
        android:textColor="@color/hint_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/limitbuy_orgprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/limitbuy_orginprice_kh"
        android:layout_below="@id/limitbuy_limitbuyprice"
        android:layout_toRightOf="@id/limitbuy_orginprice_kh"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="￥0.00"
        android:textColor="@color/hint_text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>