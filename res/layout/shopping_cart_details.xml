<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <!-- 购物车商品详细信息 -->

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <include
        android:id="@+id/shopping_cart_title"
        layout="@layout/shopping_cart_title" />

    <!-- 商品详细 -->

    <com.gome.ecmall.custom.DisScrollListView
        android:id="@+id/shopping_cart_details_first_list"
        style="@style/more_section_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip" />

    <!-- 商品组合信息 -->

    <com.gome.ecmall.custom.DisScrollListView
        android:id="@+id/shopping_cart_details_second_list"
        style="@style/more_section_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip" />

    <!-- 订单优惠 -->

    <com.gome.ecmall.custom.DisScrollListView
        android:id="@+id/shopping_cart_order_discount_list"
        style="@style/more_section_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip" />

    <!-- 商品总数 -->

    <com.gome.ecmall.custom.DisScrollListView
        android:id="@+id/shopping_cart_total_nums_list"
        style="@style/more_section_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip" />

</LinearLayout>