<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical" >

    <ImageView
        android:id="@+id/mygome_main_category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/mygome_main_category_text"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_toRightOf="@+id/mygome_main_category_icon"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:layout_marginLeft="5dip"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mygome_main_category_data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@color/main_default_white_text_color"
        android:background="@drawable/badge_ifaux"
        android:visibility="gone"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/common_right_arrow_bg_selector" />

</RelativeLayout>