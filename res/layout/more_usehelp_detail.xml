<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <TextView
        android:id="@+id/more_usehelp_detail_tv_title"
        style="@style/more_common_content_title_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="12dip" />

    <ScrollView
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="6dip"
        android:background="@drawable/more_item_single_normal"
        android:fadingEdge="none" >

        <TextView
            android:id="@+id/more_usehelp_detail_tv_content"
            style="@style/more_common_content_desc_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:singleLine="false"
            android:textColor="@color/main_default_black_text_color" />
    </ScrollView>

</LinearLayout>