<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mygome_order_details_order_status_layout_2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/more_item_single_normal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mygome_myorder_order_details_splite_desc_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:textSize="15dip" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="1dp"
        android:background="@drawable/line_2" />

    <com.gome.ecmall.custom.DisScrollListView
        android:id="@+id/mygome_myorder_order_status_splite_list"
        style="@style/more_section_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:layout_marginTop="5dip"
        android:dividerHeight="5dip" />

</LinearLayout>