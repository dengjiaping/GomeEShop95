<?xml version="1.0" encoding="utf-8"?>
<!-- 我的国美  咨询回复 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/advisory_reply_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp" >

        <Spinner
            android:id="@+id/mygome_consult_reply_spinner1"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/common_spinner_btn_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/weak_text_color"
            android:dropDownVerticalOffset="2dp"
            android:dropDownWidth="105dp"
            android:gravity="center"
            android:popupBackground="@drawable/advisory_pop_item_shape"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/mygome_consult_reply_spinner2"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/common_spinner_btn_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/weak_text_color"
            android:dropDownVerticalOffset="2dp"
            android:dropDownWidth="105dp"
            android:gravity="center"
            android:popupBackground="@drawable/advisory_pop_item_shape"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/mygome_consult_reply_spinner3"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/common_spinner_btn_selector"
            android:drawSelectorOnTop="true"
            android:dropDownSelector="@color/weak_text_color"
            android:dropDownVerticalOffset="2dp"
            android:dropDownWidth="105dp"
            android:gravity="center"
            android:popupBackground="@drawable/advisory_pop_item_shape"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <ListView
        android:id="@+id/mygome_question_reply_list"
        style="@style/common_listview_style"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="4dip"
        android:layout_weight="1"
        android:dividerHeight="12dip"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:paddingBottom="10dp"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="10dp" >
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dip"
        android:textColor="@color/weak_text_color"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>