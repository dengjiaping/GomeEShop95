<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/firstlinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_item_first_pressed"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="订单编号: "
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView2"
            android:singleLine="true"
            android:text="123456789"
            android:textColor="@color/main_default_black_text_color" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="3dip"
            android:singleLine="true"
            android:text="状态: "
            android:textColor="@color/hint_text_color" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="3dip"
            android:layout_toRightOf="@+id/textView1"
            android:singleLine="true"
            android:text="等待财务审核"
            android:textColor="@color/price_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lastlinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/more_item_last_bg_selector"
        android:minHeight="80dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="退款方式: "
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView5"
                android:text="虚拟账户"
                android:textColor="@color/main_default_black_text_color" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView5"
                android:layout_marginTop="3dip"
                android:text="退款金额: "
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView5"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@+id/textView7"
                android:text="￥100.00"
                android:textColor="@color/price_text_color" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView7"
                android:layout_marginTop="3dip"
                android:text="申请时间: "
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@+id/textView8"
                android:text="2012-03-04 19:30"
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView8"
                android:layout_marginTop="3dip"
                android:text="申请原因: "
                android:textColor="@color/hint_text_color" />

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView8"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dip"
                android:layout_toRightOf="@+id/textView9"
                android:text="手机测试故障，申请退货。手机测试故障，申请退货。手机测试故障申请退货。手机测试故障。"
                android:textColor="@color/hint_text_color" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>