<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_gridview_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <LinearLayout
        android:id="@+id/virtual_group_order_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/good_shop_name_top_background" >

            <TextView
                android:id="@+id/virtual_group_order_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="10dip"
                android:text="@string/about"
                android:textColor="@color/main_default_black_text_color" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="@drawable/more_item_middle_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shopping_cart_subtotal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_price"
                android:textColor="@color/main_default_black_text_color" />

            <TextView
                android:id="@+id/shopping_cart_single_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0"
                android:textColor="@color/main_default_black_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginTop="-1dip"
            android:background="@drawable/more_item_middle_normal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/number"
                android:textColor="@color/main_default_black_text_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/shopping_cart_decre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/virtual_btn_decrease_selector" />

                <EditText
                    android:id="@+id/shopping_cart_edit_number_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/virtual_num"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:minWidth="50dip"
                    android:textColor="@color/main_default_black_text_color"
                    android:textColorHint="@color/main_default_black_text_color" />

                <Button
                    android:id="@+id/shopping_cart_cre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/virtual_btn_plus_selector" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginTop="-1dip"
            android:background="@drawable/more_item_last_bg_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/virtual_group_total_price"
                android:textColor="@color/main_default_black_text_color" />

            <TextView
                android:id="@+id/shopping_cart_subtotal_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="￥0"
                android:textColor="@color/price_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/virtual_group_order_modify_mobile_rl"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/more_item_single_bg_selector"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/virtual_group_order_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/login_mobel"
                android:textColor="@color/main_default_black_text_color" />

            <TextView
                android:id="@+id/virtual_group_order_mobile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@+id/virtual_group_order_mobile"
                android:textColor="@color/main_default_black_text_color" />

            <ImageView
                android:id="@+id/more_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/common_right_arrow_bg_selector" />
        </RelativeLayout>

        <Button
            android:id="@+id/next_button"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dip"
            android:background="@drawable/common_orange_btn"
            android:text="@string/groupbuy_next"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>