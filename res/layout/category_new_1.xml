<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cate_bg3_shape"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cate_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cate_iv_logo"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:src="@drawable/cate_pic1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cate_iv_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxEms="10"
                android:singleLine="true"
                android:text="手机数码"
                android:textColor="@color/main_default_black_text_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/cate_iv_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxEms="15"
                android:singleLine="true"
                android:layout_marginTop="0dp"
                android:text="手机通讯/手机配件/摄影摄像"
                android:textColor="@color/hint_text_color"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cate_iv_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cate_line3" />

</LinearLayout>