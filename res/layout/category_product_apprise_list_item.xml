<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/more_item_middle_pressed"
    android:id="@+id/category_product_appraise_list_rl"
    >

    <TextView
        android:id="@+id/category_product_appraise_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="fwfw"
        android:singleLine="true"
        android:textColor="@color/weak_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:text="few"
        android:singleLine="true"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/category_product_appraise_list_item_rate"
        style="@style/appraise_ratingbar_style"
        android:layout_width="wrap_content"
        android:layout_height="16dip"
        android:layout_toRightOf="@+id/category_product_appraise_list_item_name"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="8dip"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.5" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_title_label"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/category_product_appraise_list_item_name"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/appraise_title"
        android:textColor="@color/weak_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/category_product_appraise_list_item_title_label"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_toRightOf="@id/category_product_appraise_list_item_title_label"
        android:gravity="left|center_vertical"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_recommend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/category_product_appraise_list_item_title_label"
        android:layout_below="@id/category_product_appraise_list_item_title"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/appraise_recommend"
        android:textColor="@color/weak_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/category_product_appraise_list_item_recommend_label"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_toRightOf="@id/category_product_appraise_list_item_recommend_label"
        android:gravity="left|center_vertical"
        android:textColor="@color/main_default_black_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_summary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/category_product_appraise_list_item_recommend_label"
        android:layout_below="@id/category_product_appraise_list_item_recommend"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="2dip"
        android:paddingBottom="10dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/appraise_experience"
        android:textColor="@color/weak_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/category_product_appraise_list_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/category_product_appraise_list_item_summary_label"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:paddingBottom="10dip"
        android:layout_toRightOf="@id/category_product_appraise_list_item_summary_label"
        android:gravity="left|center_vertical"
        android:textColor="@color/main_default_black_text_color"
        android:text="fssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
        android:textSize="15sp" />

</RelativeLayout>