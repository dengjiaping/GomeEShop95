<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@id/common_top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        style="@style/common_scrollbar_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="6dip"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/more_usehelp_detail_tv_title"
                style="@style/more_common_content_title_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="12dip" 
                android:text="@string/mygome_exchange_rule"
                />

            <TextView
                android:id="@+id/more_usehelp_detail_tv_content"
                style="@style/more_common_content_desc_style"
                android:background="@drawable/more_item_single_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dip"
                android:singleLine="false"
                android:textColor="@color/main_default_black_text_color" />

            <TextView
                android:id="@+id/more_usehelp_detail_tv_title_two"
                style="@style/more_common_content_title_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="6dip"
                android:layout_marginTop="12dip"
                android:text="@string/store_self_explain"
                 />

            <TextView
                android:id="@+id/more_usehelp_detail_tv_content_two"
                style="@style/more_common_content_desc_style"
                android:background="@drawable/more_item_single_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/exchange_rule_special_desc"
                android:padding="16dip"
                android:singleLine="false"
                android:textColor="@color/main_default_black_text_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>